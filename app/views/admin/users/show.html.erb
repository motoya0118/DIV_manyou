<h1><%= @user.email%>登録タスク一覧</h1>
<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th>タスク名</th>
    <th>内容</th>
    <th>設定期日</th>
  </tr>

  <% @user.tasks.each do |task|%>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= task.deadline %></td>
    </tr>
  <% end %>
</table>

