<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "個のエラーが発生しました") %>:</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title ,id: 'title' %>
  </div>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content ,id: 'content'%>
  </div>
  <div class="field">
    <%= form.label :deadline %>
    <%= form.date_field :deadline ,id: 'deadline'%>
  </div>
  <div class="field">
    <%= form.submit '登録する' %>
  </div>

<% end %>
