<h2>タスク詳細</h2>

<table>
  <tr>
    <th>タスク名</th>
    <th>内容</th>
    <th>期日</th>
    <th>作成者</th>
    <th>ラベル</th>
    <th>file</th>
  </tr>

  <tr>
    <td><%= @task.title %></td>
    <td><%= @task.content %></td>
    <td><%= @task.deadline %></td>
    <td><%= @task.user.email %></td>
    <td>
      <% @task.labels.each do |label| %>
        <%= label.name + " | " %>
      <% end %>
    </td>
    <% if @task.image? %>
      <!-- 画像表示 --> 
      <td> <%= link_to "link", @task.image.url %></td>
    <% end %>
  </tr>
</table>

<%= link_to :新規登録, new_task_path %>
<%= link_to :タスク一覧, tasks_path %>
