<p id="notice"><%= notice %></p>

<h1>Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= User.find(group.admin).email %></td>
        <td><%= link_to 'Show', group %></td>
        <td><%= link_to 'Edit', edit_group_path(group) %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% if group.admin == current_user.id %>
          <% if group.groupusers.present? %>
            <td><%= link_to 'お気に入り解除する', group_path(id: group.id), method: :delete, class: 'btn btn-danger' %></td>
          <% else %>
            <td><%= link_to 'お気に入りする', groups_path(user_id: current_user.id), method: :post, class: 'btn btn-primary' %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path %>
